
<form class="" action="cats_url" method="post">
  <label for="name">Name</label>
  <input type="text" id="name" name="cat[name]" value="">
  <br>
  <label for="birth_date">Birth Date</label>
  <input type="text" id="birth_date" name="cat[birth_date]" value="">
  <br>
  <label for="color">Color</label>
  <select name="cat[color]" id='color'>
  <!-- <input type="text" id="color" name="cat[color]" value=""> -->
    <% cat.CAT_COLORS.each do |color| %>
      <option value='<%= color %>'><%= color %></option>
    <% end %>
  </select>
  <br>

  <label for="sex">Sex</label>
  <br>
  <input type="radio" id="sex" name="cat[sex]" value="M" checked> Male<br>
  <input type="radio" id="sex" name="cat[sex]" value="F"> Female<br>
  <br>
  <label for="description">Description</label>
  <input type="text" id="description" name="cat[description]" value="">
  <br>
  <input type="submit" value="Add cat">
</form>
